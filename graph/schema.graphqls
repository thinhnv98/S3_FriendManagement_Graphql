
# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: Int!
  email: String!
}

type Success {
  status: String!
}


type IsFriend {
  success: Boolean!
}

input NewUser {
  email: String!
}

input Friends {
  friends: [String!]!
}

type Query {
  users(id: Int, email: String): [User!]!
}

type Mutation {
  createUser(input: NewUser!): User!
  createFriend(input: Friends!): IsFriend!
}
